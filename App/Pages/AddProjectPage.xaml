<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:ServiceLayer.PageModels;assembly=ServiceLayer"
             x:Class="App.Pages.AddProjectPage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False"
             x:DataType="pageModels:AddProjectPageModel">

    <Grid RowDefinitions="Auto,*" Padding="20">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="20,10" BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}">
            <Button Grid.Column="0" 
                    Text="← Назад" 
                    Command="{Binding CancelCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="16"
                    HorizontalOptions="Start"/>

            <Label Grid.Column="1" 
                   Text="Добавяне на проект" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout Spacing="15">
                <!-- Project Name -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Име на проект *" FontSize="16" FontAttributes="Bold"/>
                    <Entry Text="{Binding Name}" 
                           Placeholder="Въведете име на проекта"
                           FontSize="16"/>
                    <Label Text="{Binding NameError}" 
                           TextColor="Red" 
                           FontSize="12"
                           IsVisible="{Binding HasNameError}"/>
                </VerticalStackLayout>

                <!-- Description -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Описание" FontSize="16" FontAttributes="Bold"/>
                    <Editor Text="{Binding Description}" 
                            Placeholder="Въведете описание на проекта"
                            AutoSize="TextChanges"
                            MinimumHeightRequest="100"
                            FontSize="16"/>
                    <Label Text="{Binding DescriptionError}" 
                           TextColor="Red" 
                           FontSize="12"
                           IsVisible="{Binding HasDescriptionError}"/>
                </VerticalStackLayout>

                <!-- Start Date -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Начална дата *" FontSize="16" FontAttributes="Bold"/>
                    <DatePicker Date="{Binding StartDate}"
                                Format="dd.MM.yyyy"
                                FontSize="16"
                                HorizontalOptions="Fill"
                                MinimumDate="{Binding TodayDate}"/>
                    <Label Text="{Binding StartDateError}" 
                           TextColor="Red" 
                           FontSize="12"
                           IsVisible="{Binding HasStartDateError}"/>
                </VerticalStackLayout>

                <!-- End Date -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Крайна дата *" FontSize="16" FontAttributes="Bold"/>
                    <DatePicker Date="{Binding EndDate}"
                                Format="dd.MM.yyyy"
                                FontSize="16"
                                HorizontalOptions="Fill"
                                MinimumDate="{Binding StartDate}"/>
                    <Label Text="{Binding EndDateError}" 
                           TextColor="Red" 
                           FontSize="12"
                           IsVisible="{Binding HasEndDateError}"/>
                </VerticalStackLayout>

                <!-- Assigned Users -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Назначени служители" FontSize="16" FontAttributes="Bold"/>
                    <CollectionView ItemsSource="{Binding AvailableUsers}"
                                    SelectionMode="Multiple"
                                    SelectedItems="{Binding SelectedUsers}"
                                    HeightRequest="150"
                                    BackgroundColor="LightGray">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <Label Text="{Binding Name}" 
                                           FontSize="16"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Label Text="{Binding UsersError}" 
                           TextColor="Red" 
                           FontSize="12"
                           IsVisible="{Binding HasUsersError}"/>
                    <Label Text="{Binding SelectedUsersCountText}" 
                           FontSize="14"
                           FontAttributes="Italic"
                           TextColor="Gray"/>
                </VerticalStackLayout>

                <!-- Buttons -->
                <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                    <Button Text="Създай проект" 
                            Command="{Binding CreateProjectCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="50"/>

                    <Button Text="Отказ" 
                            Command="{Binding CancelCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"
                            FontSize="16"
                            HeightRequest="50"/>
                </VerticalStackLayout>

                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>