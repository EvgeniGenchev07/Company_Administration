<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:App.Pages"
    Shell.FlyoutBehavior="Disabled"
    NavigationPage.HasBackButton ="False"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    Title="EAP Administraion">
   
    <ShellContent
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="register" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:BusinessTripDetailsPage}"
        Route="businesstripdetails" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:AbsenceDetailsPage}"
        Route="AbsenceDetailsPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AdminPage}"
        Route="AdminPage" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:BusinessTripsPage}"
        Route="businesstrips" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:RequestPage}"
        Route="request" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:AbsencePage}"
        Route="AbsencePage" />
   
    <ShellContent
        ContentTemplate="{DataTemplate pages:AdminAllAbsencesPage}"
        Route="AdminAllAbsencesPage" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:AdminAllBusinessTripsPage}"
        Route="AdminAllBusinessTripsPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:BusinessTripsSummaryPage}"
        Route="BusinessTripsSummaryPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AllAbsencesPage}"
        Route="AllAbsencesPage" />

    <ShellContent
        ContentTemplate="{DataTemplate pages:AbsenceDetailsPage}"
        Route="AbsenceDetailsPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AddProjectPage}"
        Route="AddProjectPage" />
    <ShellContent
        ContentTemplate="{DataTemplate pages:AdminUsersPage}"
        Route="AdminUsersPage" />

</Shell>